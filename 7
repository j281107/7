1)
int main()
{
 setlocale(LC_ALL, "RU");
 srand(time(NULL));
 int a = 1; 
 int b = 2;
 int c = 3;
 int temp;
 int *aPtr = &a, *bPtr = &b, *cPtr = &c;
 int *tempPtr = &temp;
 *tempPtr = *bPtr;
 *bPtr = *cPtr;
 *cPtr = *aPtr;
 *aPtr = *tempPtr;
 cout<<a<<b<<c<<"\n";
 return 0; 
}

2)
#include <iostream>

int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));
    int const size = 5;
    int ar[size];
    int min = *ar;
    int number_min = 0;

    for (int i = 1; i < size; i++)
    {

        if (min > *(ar + i))
        {
            min = *(ar + i);
            number_min = i;
        }
      cout << "Минимум равен: " << min << " и его порядковый номер в массиве " << number_min + 1 << endl;

    }
   	return 0;
}


3.
int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));
    using namespace std;
    int n, i, flag = 1;
    cout << "Введите число : ";
    cin >> n;
        
   for (i = 2; i <= sqrt(n); i++)
   {
       if (n % i == 0)
       {
          flag = 0;
           break;
       }
   }
    if (n <= 1) flag = 0;
    if (flag == 1)
    {
      cout << n << " это простое число";
    }
   else 
    {
     cout << n << " это не простое число";
    }
      
   	return 0;
}

4.
int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));
    using namespace std;
    cout << "Введите число для вычисления факториала" << endl;
    int a = 0;
    int* p = &a;
    cin >> *p;
    cout << endl;
    cout << fact(p);
    system("pause");
}
int fact(int* p) 
{
    {
        if (*p <= 1)
            return 1;
        else
        {
            int t = *p - 1;
            return *p * fact(&t);
        }
    }
5.
int main()
{
	setlocale(LC_ALL, "RU");
	srand(time(NULL));
    using namespace std;
    int n = 1221;
    string s = to_string(n);
    int l = 0;
    int r = s.size() - 1;
    while (l < r) 
    {
        if (s[l] != s[r])
        {
            cout << "Не является палиндромом";
            return 0;
        }
       
        l++, r--;
    }
    
    cout << "Палиндром";
    return 0;
}
